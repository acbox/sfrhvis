<!DOCTYPE HTML>
<html>
  <head>
    <title>Spot Fleet Request History</title>
  
    <style>
      body, html {
        font-family: arial, sans-serif;
        font-size: 11pt;
      }
  
      #visualization {
        box-sizing: border-box;
        width: 100%;
        height: 300px;
      }

      .vis-item.running {
        background-color: green;
        border-color: black;
      }
      .vis-item.stopped {
        background-color: lightgray;
        border-color: black;
      }
      .vis-item.terminated {
        background-color: red;
        border-color: black;
      }
    </style>
  
    <script src="/js/vis.js"></script>
    <link href="/css/vis-timeline-graph2d.min.css" rel="stylesheet" type="text/css" />
    
  </head>
  <body>
    <h1>Spot fleet request history</h1>

    <p>Request ID: <%- requestId %></p>
    <p>Start time: <%- startTime %></p>
    <p>Change events: <%- changeEvents %></p>

    <div id="visualization"></div>
    
    <script>
      var groups = new vis.DataSet(<%- JSON.stringify(groups) %>);
    
      var items = new vis.DataSet(<%- JSON.stringify(items) %>);
    
      var container = document.getElementById('visualization');
      var options = {
        groupOrder: function (a, b) {
          return a.value - b.value;
        },
        editable: false
      };
    
      var timeline = new vis.Timeline(container);
      timeline.setOptions(options);
      timeline.setGroups(groups);
      timeline.setItems(items);
    </script>
  </body>
</html>
